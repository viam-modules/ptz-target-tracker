{
  "$schema": "https://dl.viam.dev/module.schema.json",
  "module_id": "viam:ptz-target-tracker",
  "visibility": "public",
  "url": "https://github.com/viam-modules/ptz-target-tracker",
  "description": "PTZ camera tracking service that automatically follows a target frame using ONVIF PTZ control",
  "models": [
    {
      "api": "rdk:service:generic",
      "model": "viam:ptz-target-tracker:component-tracker",
      "short_description": "PTZ camera tracking service that automatically follows a target frame using ONVIF PTZ control with polynomial-fit calibration",
      "markdown_link": "README.md#model-viamptz-target-trackercomponent-tracker"
    },
    {
      "api": "rdk:component:camera",
      "model": "viam:ptz-target-tracker:aiming-camera",
      "short_description": "Camera wrapper that overlays a crosshair on the video feed",
      "markdown_link": "README.md#model-viamptz-target-trackeraiming-camera"
    }
  ],
  "applications": null,
  "markdown_link": "README.md",
  "entrypoint": "bin/ptz-target-tracker",
  "first_run": "",
  "build": {
    "build": "make module.tar.gz",
    "setup": "make setup",
    "path": "module.tar.gz",
    "arch": [
      "linux/amd64",
      "linux/arm64",
      "darwin/arm64",
      "windows/amd64"
    ]
  }
}